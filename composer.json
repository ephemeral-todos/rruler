{
    "name": "ephemeral-todos/rruler",
    "description": "Focused and lightweight RFC 5545 Recurrence Rule (RRULE) Parser and Occurrence Calculator.",
    "keywords": ["rfc5545", "RRULE", "recurring", "ical", "VCALENDAR", "VTODO", "repeating", "calendar"],
    "homepage": "https://github.com/simensen/ephemeral-todos-rruler",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Beau Simensen",
            "email": "beau@beausimensen.com",
            "homepage": "https://beausimensen.com"
        }
    ],
    "support": {
        "issues": "https://github.com/simensen/ephemeral-todos-rruler/issues",
        "source": "https://github.com/simensen/ephemeral-todos-rruler"
    },
    "require": {
        "php": "^8.3|^8.4|^8.5"
    },
    "autoload": {
        "psr-4": {
            "EphemeralTodos\\Rruler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EphemeralTodos\\Rruler\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "docs": "phpdocumentor",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff",
        "test": "phpunit",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --configuration phpunit-coverage.xml",
        "test:unit": "phpunit --testsuite unit",
        "test:integration": "phpunit --testsuite integration",
        "test:sabre-dav-incompatibility": "phpunit --group sabre-dav-incompatibility",
        "test:documentation-consistency": "phpunit --group documentation-consistency",
        "update-docs": "php scripts/update-documentation-stats.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^11.5.27",
        "sabre/vobject": "^4.5",
        "symfony/yaml": "^7.3"
    }
}
